{
  "name": "adsengineer-cloud",
  "version": "1.0.0",
  "description": "Serverless advertising optimization platform",
  "packageManager": "pnpm@10.27.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8090",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "types:check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "check": "biome check . && biome format --check .",
    "lint:legacy": "eslint src tests --ext .ts,.tsx",
    "format:legacy": "prettier --check \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx,json}\"",
    "test": "vitest",
    "test:all": "biome check . && vitest --run",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:e2e": "vitest --run --config vitest.e2e.config.ts",
    "test:ci": "vitest --reporter=dot --coverage",
    "test:security": "node ../../load-test.js --scenario invalid-sig",
    "test:rate-limit": "node ../../load-test.js --scenario rate-limit",
    "test:performance": "node ../../load-test.js --scenario performance",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint:check": "biome check src/",
    "type:check": "tsc --noEmit",
    "type:check:strict": "tsc --noEmit --strict",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit --audit-level=high",
    "build:check": "npm run build",
    "validate": "npm run lint:check && npm run type:check && npm run test && npm run build:check",
    "test:api-health-check": "node scripts/api-health-check.js",
    "test:api-version-check": "node scripts/api-version-check.js",
    "test:webhook-compatibility-test": "node scripts/webhook-compatibility-test.js",
    "test:check-api-deprecations": "node scripts/check-api-deprecations.js",
    "test:migrate-to-vps": "bash scripts/migrate-to-vps.sh",
    "test:vps-health-check": "bash scripts/health-check.sh"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^0.18.4",
    "@noble/hashes": "^1.4.0",
    "@paralleldrive/cuid2": "^3.0.6",
    "fflate": "^0.8.2",
    "google-ads-api": "^21.0.1",
    "hono": "^4.11.3",
    "stripe": "^14.25.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/workers-types": "^4.20260101.0",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "playwright": "^1.40.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.59.1"
  },
  "license": "UNLICENSED"
}
