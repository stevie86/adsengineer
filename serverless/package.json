{
  "name": "adsengineer-cloud",
  "version": "1.0.0",
  "description": "Serverless advertising optimization platform",
  "packageManager": "pnpm@10.27.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8090",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "types:check": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx,json}\"",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "check": "biome check . && biome format --check .",
    "lint:legacy": "eslint src tests --ext .ts,.tsx",
    "format:legacy": "prettier --check \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx,json}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:e2e": "vitest --run --config vitest.e2e.config.ts",
    "load-test": "node ../../load-test.js",
    "load-test:local": "USE_LOCAL=true node ../../load-test.js",
    "load-test:rate-limit": "node ../../load-test.js --scenario rate-limit",
    "load-test:security": "node ../../load-test.js --scenario invalid-sig",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "api-health-check": "node scripts/api-health-check.js",
    "api-version-check": "node scripts/api-version-check.js",
    "webhook-compatibility-test": "node scripts/webhook-compatibility-test.js",
    "check-api-deprecations": "node scripts/check-api-deprecations.js",
    "migrate-to-vps": "bash scripts/migrate-to-vps.sh",
    "vps-health-check": "bash scripts/health-check.sh"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^0.18.4",
    "@noble/hashes": "^1.4.0",
    "@paralleldrive/cuid2": "^3.0.6",
    "google-ads-api": "^21.0.1",
    "hono": "^4.11.3",
    "stripe": "^14.25.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/workers-types": "^4.20260101.0",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "license": "UNLICENSED"
}
