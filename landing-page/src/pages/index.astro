<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('waitlist-form');
    const errorDiv = document.getElementById('form-error');
    const successDiv = document.getElementById('form-success');
    
    window.submitWaitlistForm = async function() {
      const email = document.getElementById('waitlist-email').value;
      const name = document.getElementById('waitlist-name')?.value || '';
      const consent = document.getElementById('waitlist-consent')?.checked || false;
      const locale = document.documentElement.lang || 'en';
      
      if (typeof hcaptcha === 'undefined') {
        errorDiv.textContent = 'hCaptcha not loaded. Please refresh the page.';
        errorDiv.classList.remove('hidden');
        return;
      }
      
      const hcaptchaResponse = hcaptcha.getResponse();
      
      if (!hcaptchaResponse) {
        errorDiv.textContent = locale === 'de' 
          ? 'Bitte best√§tigen Sie, dass Sie kein Roboter sind.'
          : 'Please verify that you are not a robot.';
        errorDiv.classList.remove('hidden');
        return;
      }
      
      errorDiv.classList.add('hidden');
      successDiv.classList.add('hidden');
      
      try {
        const response = await fetch('/api/waitlist', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ name, email, locale, hcaptchaToken: hcaptchaResponse, consentToContact: consent })
        });
        
        const data = await response.json();
        
        if (response.ok && data.success) {
          successDiv.classList.remove('hidden');
          form.reset();
          hcaptcha.reset();
        } else {
          console.error('API Error:', data);
          errorDiv.textContent = data.error || (locale === 'de' 
            ? 'Ihre Anmeldung konnte nicht gespeichert werden. Bitte versuchen Sie es erneut.'
            : 'Your subscription could not be saved. Please try again.');
          errorDiv.classList.remove('hidden');
          hcaptcha.reset();
        }
      } catch (error) {
        errorDiv.textContent = locale === 'de' 
          ? 'Ihre Anmeldung konnte nicht gespeichert werden. Bitte versuchen Sie es erneut.'
          : 'Your subscription could not be saved. Please try again.';
        errorDiv.classList.remove('hidden');
        hcaptcha.reset();
      }
    };
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        window.submitWaitlistForm();
      });
    }
  });
</script>
